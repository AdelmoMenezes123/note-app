<div class="mx-auto py-4" id="form">
    <div class="card mt-5">
        <div class="card-header">
            <h3>Edit Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit/{{note.id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
                 <div class="form-floating mb-3">
                    <input type="text" name="title" maxlength="50" class="form-control" id="floatingInput" value="{{note.title}}" placeholder="Title" required>
                    <label for="floatingInput">Title</label>
                </div>
                <div class="form-floating mb-3">
                    <textarea name="description" class="form-control textarea" maxlength="67" required>{{note.description}}</textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-green btn-block">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>