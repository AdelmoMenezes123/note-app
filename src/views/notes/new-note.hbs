<div class="col-md-4 col-sm-12 col-lx-6 mx-auto py-5">
    <div class="card text-center mt-5">
        <div class="card-header">
            <h3>New Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="POST">
                <div class="form-floating mb-3">
                    <input type="text" name="title" class="form-control" id="floatingInput" placeholder="Title" required>
                    <label for="floatingInput">Title</label>
                </div>
                <div class="form-floating mb-3">
                    <textarea name="description" class="form-control textarea" placeholder="Description" required></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-green btn-block">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>