<div class="mx-auto" id="form">
    <div class="card text-center mt-5">
        <div class="card-header">
            <h3>New Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="POST">
                <div class="form-floating mb-3">
                    <input type="text" name="title" maxlength="50" class="form-control" id="floatingInput" placeholder="Title"
                        required>
                    <label for="floatingInput">Title</label>
                </div>

                <div class="form-floating mb-3">
                    <select class="form-select" name="categoria" id="floatingSelectGrid" aria-label="Floating label select example">
                        <option selected>Selecione</option>
                        <option value="hqs">HQ's</option>
                        <option value="mangas">Mang√°s</option>
                        <option value="livros">Livros</option>
                        <option value="filmes">Filmes</option>
                        <option value="series">Series</option>
                        <option value="anime">Animes</option>
                        <option value="desenhos">Desenhos</option>
                    </select>
                    <label for="floatingSelectGrid">Categorias</label>
                </div>

                <div class="form-floating mb-3">
                    <textarea name="description" class="form-control textarea" 
                    placeholder="Description" maxlength="80" required></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-green btn-block">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>