{{#if success_msg}}
    <div id="msg" class="alert alert-success alert-dismissible fade show" role="alert">
        {{success_msg}}
    <button type="button" class="close msg-right" data-dismiss="alert" aria-label="close" >
        <span aria-hidden="true">&times;</span>
    </button>
    </div>
{{/if}}

{{#if error_msg}}
    <div id="msg" class="alert alert-danger alert-dismissible fade show" role="alert">
        {{error_msg}}
    <button type="button" class="close btn-green msg-right" data-dismiss="alert" aria-label="close" >
        <span aria-hidden="true">&times;</span>
    </button>
    </div>
{{/if}}